---
import "../../../../styles/global.css";

interface Props {
  title: string;
}

const { title }: Props = Astro.props;
const baseURL = "http://localhost:4321"; // "https://yashdiniz.me";
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link href={`${baseURL}/feed.rss`} type="application/rss+xml" />
    <link href={`${baseURL}/feed.atom`} type="application/rss+atom" />
    <link rel="icon" type="image/svg+xml" href={`${baseURL}/favicon.svg`} />
  </head>
  <body>
    <slot />
  </body>
</html>
