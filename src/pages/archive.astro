---
import Base from "../components/shared/layouts/base/BaseLayout.astro";
const posts = Object.values(import.meta.glob("./posts/*.md", { eager: true }));
---
<Base>
  <div style="margin: 80px auto; padding: 10px; max-width: 768px;">
    <p>Post Archive:</p>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a> ({new Date(post.frontmatter.date).toDateString()})
          </li>
        ))
      }
    </ul>
  </div>
</Base>
