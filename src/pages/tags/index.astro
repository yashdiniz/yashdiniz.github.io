---
import Base from "../../layouts/Base.astro";

const allPosts = await Astro.glob("../posts/*.md");
const uniques = [
	...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<Base title="Tags">
	<h1>Tags</h1>
	<div class="tags">
		{
			uniques.map((tag) => (
				<p>
					<a href={`/tags/${tag}`} class="tag">
						{tag}
					</a>
				</p>
			))
		}
	</div>
	<style>
		a {
			color: #00539f;
		}
	</style>
</Base>
